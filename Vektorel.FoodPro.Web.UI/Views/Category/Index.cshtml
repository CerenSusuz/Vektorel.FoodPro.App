@model List<Category>
@{
    ViewBag.Title = "Index";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 ">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">CategoryID</th>
                        <th scope="col">Category Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Picture</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <th scope="row">@category.CategoryID</th>
                            <td>@category.CategoryName</td>
                            <td>@category.Description</td>
                            <td>@category.Picture</td>
                            <td><a class="btn btn-danger btn-sm font-gray-1" href="@Url.Action("Delete","RegisterC",new {id=category.CategoryID})">X</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a class="btn btn-success offset-lg-8" href="@Url.Action("Index","RegisterC")">Add New Category</a>
        </div>
    </div>
</div>

