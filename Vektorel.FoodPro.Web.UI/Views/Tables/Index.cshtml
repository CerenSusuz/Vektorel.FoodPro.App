@model TablesViewModel
@{
    ViewBag.Title = "Index";
}

@*Shipper*@
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">ShipperID</th>
                        <th scope="col">Company Name</th>
                        <th scope="col">Phone Number</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var shipper in Model.Shippers)
                    {
                        <tr class="@(shipper.ShipperID %2 == 0 ? "bg-info" : "bg-success")">
                            <th scope="row">@shipper.ShipperID</th>
                            <td>@shipper.CompanyName</td>
                            <td>@shipper.Phone</td>
                            @*<td><a class="btn btn-danger btn-sm font-gray-1" href="@Url.Action("Delete","RegisterS",new {id=shipper.ShipperID})">X</a></td>*@
                        </tr>
                    }
                </tbody>
            </table>
            @*<a class="btn btn-success offset-lg-8" href="@Url.Action("Index","RegisterS")">Add New Shipper</a>*@
        </div>

        @*CATEGORY*@

        <div class="col-md-6 ">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">CategoryID</th>
                        <th scope="col">Category Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Picture</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr class="@(category.CategoryID %2 == 0 ? "bg-success" : "bg-info")">
                            <th scope="row">@category.CategoryID</th>
                            <td>@category.CategoryName</td>
                            <td>@category.Description</td>
                            <td>@category.Picture</td>
                            @*<td><a class="btn btn-danger btn-sm font-gray-1" href="@Url.Action("CatDelete","RegisterC",new {id=category.CategoryID})">X</a></td>*@
                        </tr>
                    }
                </tbody>
            </table>
            @*<a class="btn btn-success offset-lg-8" href="@Url.Action("SaveCat","RegisterC")">Add New Category</a>*@
        </div>
    </div>
</div>
